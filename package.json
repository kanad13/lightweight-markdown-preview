{
	"name": "lightweight-markdown-viewer",
	"displayName": "Lightweight Markdown Viewer",
	"description": "A simple Markdown preview extension for VS Code with Mermaid diagram support.",
	"version": "0.0.1",
	"publisher": "kanad13",
	"engines": {
		"vscode": "^1.85.0",
		"node": ">=18.0.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"markdown",
		"preview",
		"mermaid",
		"diagrams"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "lightweightMarkdownViewer.showPreview",
				"title": "Show Lightweight Markdown Preview",
				"category": "Markdown",
				"icon": {
					"light": "icon-eye.svg",
					"dark": "icon-eye.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "lightweightMarkdownViewer.showPreview",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"marked": "^9.0.0"
	},
	"devDependencies": {
		"@types/node": "^18.0.0",
		"@types/vscode": "^1.85.0",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.50.0",
		"@vscode/vsce": "^2.22.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kanad13/vscode-markdown-preview.git"
	},
	"license": "MIT"
}
