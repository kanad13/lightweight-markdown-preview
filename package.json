{
	"name": "lightweight-markdown-preview",
	"displayName": "Lightweight Markdown Preview",
	"description": "Lightweight, privacy-friendly Markdown preview with Mermaid diagrams and MathJax equations. No bloat, no tracking.",
	"version": "0.2.0",
	"icon": "assets/icon.png",
	"publisher": "kanad13",
	"author": "kanad13",
	"homepage": "https://github.com/kanad13/lightweight-markdown-preview",
	"bugs": {
		"url": "https://github.com/kanad13/lightweight-markdown-preview/issues"
	},
	"engines": {
		"vscode": "^1.85.0",
		"node": ">=18.0.0"
	},
	"categories": [
		"Other",
		"Formatters"
	],
	"keywords": [
		"markdown",
		"preview",
		"md",
		"mermaid",
		"mathjax",
		"diagrams",
		"equations",
		"viewer",
		"live-preview",
		"lightweight",
		"privacy",
		"render",
		"documentation",
		"chart",
		"flowchart"
	],
	"qna": "marketplace",
	"galleryBanner": {
		"color": "#0D47A1",
		"theme": "dark"
	},
	"activationEvents": [
		"onCommand:lightweightMarkdownViewer.showPreview"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "lightweightMarkdownViewer.showPreview",
				"title": "Show Lightweight Markdown Preview",
				"category": "Markdown",
				"icon": {
					"light": "assets/icon-eye.svg",
					"dark": "assets/icon-eye.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "lightweightMarkdownViewer.showPreview",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"test": "npm run lint",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"marked": "^16.4.1"
	},
	"devDependencies": {
		"@types/node": "^24.9.2",
		"@types/vscode": "^1.85.0",
		"@vscode/test-electron": "^2.4.6",
		"eslint": "^9.39.0",
		"@vscode/vsce": "^3.6.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kanad13/lightweight-markdown-preview.git"
	},
	"license": "MIT",
	"pricing": "Free"
}
